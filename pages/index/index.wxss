.desc {
  margin: 20px 30px 0 30px;
  border: 1px double #000;
  padding: 10px;
}
.desc-title {
  font-size: 40rpx;
  text-align: center;
  line-height: 100rpx;
}

.desc-content {
  font-size: 30rpx;
  text-align: center;
}

body {
  display: flex;
  height: 100vh;
  justify-content: center;
  align-items: center;
  background: #222;
}

.mainTitle {
  text-align: center;
  width: 80%;
  margin: 20px auto;
  border: #222 solid 1px;
  padding-bottom: 10rpx;
  font-size: 24px;
  margin-top: 0px;
  padding-top: 0px;
}

.group {
  margin-top: 20px;
  display: flex;
  justify-content: space-around;
}

.first,.second {
  text-align: center;
  width: 200px;
  height: 200px;
  /* border-radius: 142px; */
  /* border: 1px solid #222; */
  display: flex;
  align-items: center;
  justify-content: center;
  background-image: url(https://s1.ax1x.com/2020/05/26/tFfeeI.png);
  background-size: 100% 100%;
}

.btn {
  background-color: rgb(255,255, 255);
  border: 1px solid #222;
}

.title {
  border: 1px #222 solid;
  margin: 20px auto;
  font: 20px;
  text-align: center;
  line-height: 30px;
  padding: 10px;
  border-radius: 3px;
}

.mainTitleImg {
  width: 30px;
  height: 30px;
  margin: 0;
  padding: 5px;
}

.mainTitleImgBox {
  text-align: center;
  margin: 0 auto;
}

.remainTime {
  font-size: 20px;
  margin-top: -30px;
}